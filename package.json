{
  "name": "next-sql",
  "version": "0.0.2",
  "description": "Next-gen SQL connector, easy way to query SQL and create relationship linked object.",
  "keywords": [
    "sql",
    "mysql",
    "kenx",
    "mysql2",
    "query",
    "querybuilder",
    "connector",
    "db",
    "database",
    "rds"
  ],
  "author": "Cowboy Ho <info@cow-boy.net>",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "files": [
    "lib/**"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/cow258/next-sql"
  },
  "scripts": {
    "dev": "node ./cli/dev",
    "cleanup": "rm -rf node_modules && rm yarn.lock",
    "lint:staged": "lint-staged",
    "lint:js": "eslint --ext .js .",
    "lint:fix": "eslint --ext .js --fix .",
    "test": "jest --runInBand ./test/**.test.js",
    "db:start": "docker-compose -f cli/docker-compose.yml up --build -d mysql && docker-compose -f cli/docker-compose.yml up waitmysql",
    "db:stop": "docker-compose -f cli/docker-compose.yml down"
  },
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "babel-eslint": "^10.1.0",
    "console.table": "^0.10.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.7",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "mysql": "^2.18.1",
    "prettier": "^2.2.1"
  },
  "peerDependencies": {
    "mysql": "^2.18.1"
  },
  "peerDependenciesMeta": {
    "mysql": {
      "optional": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,scss,yaml,yml}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --ext .js --fix ."
    ]
  }
}